// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// üåç ENUM DIVISI√ìN
// JUGUETERIA = Festamas (Marca Principal)
// FIESTAS = FiestasYa (Divisi√≥n Secundaria)
enum Division {
  JUGUETERIA
  FIESTAS
}

// üì¶ PRODUCTOS
model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  slug        String   @unique
  price       Decimal  @default(0) @db.Decimal(10, 2)
  stock       Int      @default(0)
  images      String[]

  isAvailable Boolean  @default(true)
  
  // Variantes
  color       String?
  groupTag    String?

  // üëá CAMBIO CLAVE: Por defecto ahora es JUGUETERIA (Festamas)
  division    Division @default(JUGUETERIA)
  
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String

  orderItems  OrderItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// üóÇÔ∏è CATEGOR√çAS
model Category {
  id    String @id @default(uuid())
  name  String
  slug  String @unique

  // üëá CAMBIO CLAVE: Por defecto JUGUETERIA
  division Division @default(JUGUETERIA)

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üõçÔ∏è PEDIDOS
model Order {
  id            String      @id @default(uuid())
  
  totalAmount   Decimal     @db.Decimal(10, 2)
  totalItems    Int
  status        OrderStatus @default(PENDING)
  isPaid        Boolean     @default(false)
  
  clientName    String
  clientPhone   String
  deliveryMethod String   @default("PICKUP") 
  shippingAddress String?
  shippingCost    Decimal  @default(0) @db.Decimal(10, 2)
  notes           String?
  
  orderItems    OrderItem[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int
  price     Decimal @db.Decimal(10, 2)

  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String

  product   Product @relation(fields: [productId], references: [id])
  productId String
}

enum OrderStatus {
  PENDING
  PAID
  DELIVERED
  CANCELLED
}

// üë§ USUARIOS
model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(USER)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Role {
  ADMIN
  USER
}

model StoreConfig {
  id             String   @id @default(uuid())
  whatsappPhone  String   @default("51999999999")
  welcomeMessage String   @default("Hola Festamas, quiero confirmar mi pedido...")
  localDeliveryPrice Decimal @default(10.00) @db.Decimal(10, 2)

  // HERO CONFIG
  heroImage       String?
  heroTitle       String   @default("Juguetes y Alegr√≠a")
  heroSubtitle    String   @default("Encuentra el regalo perfecto en Festamas")
  heroButtonText  String   @default("Ver Juguetes")
  heroButtonLink  String   @default("#catalogo")
  heroBtnColor    String   @default("#fb3099")
  
  updatedAt      DateTime @updatedAt
}

model Coupon {
  id        String   @id @default(uuid())
  code      String   @unique
  discount  Decimal  @db.Decimal(10, 2)
  type      CouponType @default(FIXED)
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
}

enum CouponType {
  FIXED
  PERCENTAGE
}

// BANNERS
model Banner {
  id        String   @id @default(uuid())
  title     String
  image     String
  link      String
  
  btnText   String   @default("Ver M√°s")
  btnColor  String   @default("#000000")
  btnTextColor String @default("#FFFFFF")
  textColor String   @default("#FFFFFF") 
  
  position  String   @default("TOP")
  size      String   @default("GRID")
  
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}